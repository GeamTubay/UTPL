//objetivo del proyecto: calcular el area y el perimetro de un rectangulo
package calculo;
// Importar Librerias
import javax.swing.JOptionPane;

public class operaciones {
    //Atributos de clase
    double base;
    double altura;
    double area;
    double perimetro;

    //MÃ©todos
    public void leerNumeros()
    {
        base= Integer.parseInt(JOptionPane.showInputDialog("Digite base: "));
        altura= Integer.parseInt(JOptionPane.showInputDialog("Digite altura: "));
    }
    public void area()
    {
    area=base*altura ;
    }
    public void perimetro()
    {
    perimetro= (2*base)+(2*altura);
    }

    public void resultado()
    {
        System.out.println("Resultados de las Operaciones");
        System.out.println("-----------------------------");
        System.out.println("el area de su rectangulo es : " + area);
        System.out.println("el perimetro de su rectangulo es : " + perimetro);
       
    }
}

